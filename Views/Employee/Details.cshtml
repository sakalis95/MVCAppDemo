@{ ViewData["Title"] = "Details Page";}
@model Employee


    <div class="p-3 m-4 narrower-screen">
        <div class="card-body justify-content-center">
            <div class=" p-5 panel-styling">
                @*<p>@Model.Id @Model.Name</p>*@
                <form class="d-flex flex-column align-items-center justify-content-center" method="post" asp-controller="Employee" asp-action="Update">
                    <input type="hidden" value="@Model.Id" name="id" />
                    <label class="mb-2 fw-bold label">
                        Name:
                    </label>
                    <input class="mb-2 panel-styling input-field" type="text" value="@Model.Name" name="name" />
                    <input class="button table-button mt-3" type="submit" value="Update Employee" name="submit" />
                </form>
            </div>
        </div>
    </div>
