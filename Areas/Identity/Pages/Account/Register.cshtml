@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<style>
    input::placeholder {
        color: #ffc107 !important;
        /*font-style: italic;*/
    }

    ::placeholder {
        color: #ffc107;
        opacity: 1; /* Firefox */
    }
</style>
<div class="card-fluid rounded bg-dark">
    <div class="card-title d-flex justify-content-center mt-5">
        <h1 class="text-warning mt-3">@ViewData["Title"]</h1>
    </div>
    <div class="card-body pt-0 row text-warning d-flex justify-content-center">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="form-group p-2">
                        <input asp-for="Input.Email" class="form-control bg-black border border-warning rounded-pill text-warning" placeholder="✉ Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group p-2">
                        <input asp-for="Input.Password" class="form-control bg-black border border-warning rounded-pill text-warning" placeholder="🔒 Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group p-2">
                        <input asp-for="Input.ConfirmPassword" class="form-control bg-black border border-warning rounded-pill text-warning" placeholder="⭯ Repeat password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group row mx-2 py-4">
                        <button type="submit" class="btn text-warning border-warning btn-secondary btn-block rounded-pill">Register</button>
                    </div>
                </form>
            </section>
        </div>

    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
