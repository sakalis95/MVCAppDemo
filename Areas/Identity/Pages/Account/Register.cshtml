<div class="panel-styling">
    <div class="card-title d-flex justify-content-center mt-5">
        <h2 class="mt-5">@ViewData["Title"]</h2>
    </div>
    <div class="card-body d-flex justify-content-center">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    @*<div class="text-danger" asp-validation-summary="All"></div>*@
                    <div class="form-group p-2">
                        <input asp-for="Input.Email" class="form-control input-field border border-success rounded-pill" placeholder="✉ Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group p-2">
                        <input asp-for="Input.Password" class="form-control input-field border border-success rounded-pill" placeholder="🔒 Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group p-2">
                        <input asp-for="Input.ConfirmPassword" class="form-control input-field border border-success rounded-pill" placeholder="⭯ Repeat password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group row mx-2 py-4 mb-5">
                        <button type="submit" class="button table-button border-success btn-block rounded-pill">Register</button>
                    </div>
                </form>
            </section>
        </div>

    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
