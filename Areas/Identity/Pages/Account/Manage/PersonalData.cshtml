@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}


<style>
    input::placeholder {
        color: #ffc107 !important;
        /*font-style: italic;*/
    }

    ::placeholder {
        color: #ffc107;
        opacity: 1; /* Firefox */
    }
</style>
<div class="card-fluid rounded bg-black pb-3 pt-2">
    <div class="card-title d-flex justify-content-center ">
        <h1 class="text-warning mt-3">@ViewData["Title"]</h1>
       
    </div>
    <div class="card-body pt-0 row text-warning d-flex justify-content-center">
        <div class="col-md-4">
            <section>
                <p class="text-warning">Your account contains personal data that you have given us. You can download or delete that data.</p>
                <p class="text-danger">
                    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
                <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
                    <div class="form-group row mx-2 py-4">
                        <button type="submit" class="btn text-warning border-warning btn-secondary btn-block rounded-pill">Download</button>
                    </div>
                    
                    <div class="form-group row mx-2">
                        <button type="submit" class="btn text-warning border-warning btn-primary btn-block rounded-pill" id="delete" asp-page="DeletePersonalData" disabled>Delete (TBD)</button>
                    </div>
                </form>
            </section>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
