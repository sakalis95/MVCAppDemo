@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
<div class="card bg-dark rounded mt-5 p-4">
<h2 class="text-warning d-flex justify-content-center pb-4">Manage your account</h2>

<div>
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
