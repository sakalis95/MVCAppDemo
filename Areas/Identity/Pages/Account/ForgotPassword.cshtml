@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    input::placeholder {
        color: #ffc107 !important;
        /*font-style: italic;*/
    }

    ::placeholder {
        color: #ffc107;
        opacity: 1; /* Firefox */
    }
</style>
<div class="card-fluid rounded bg-dark mt-5">
    <div class="card-title  pt-2">
        <h1 class="text-warning mt-3 d-flex justify-content-center">@ViewData["Title"]</h1>
        <h4 class="text-warning mt-3 d-flex justify-content-center">Enter your email:</h4>
    </div>
    <div class="card-body pt-0 row text-warning d-flex justify-content-center">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="form-group p-2">
                        <input asp-for="Input.Email" class="form-control bg-black border border-warning rounded-pill text-warning" placeholder="✉ Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group row mx-2 py-4">
                        <button type="submit" class="btn text-warning border-warning btn-secondary btn-block rounded-pill">Submit</button>
                    </div>
                </form>
            </section>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
